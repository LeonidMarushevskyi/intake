#!/bin/bash

set -e

ROOT="$(dirname "$0")/.."
source "$ROOT/bin/_util"

scss() {
  bundle exec scss-lint
}

js_files() {
  find spec/javascripts/ app/javascript -type f \( -name "*.js" -o -name "*.jsx" \)
}

js() {
  if [[ "$GENERATE_TEST_REPORTS" = 'yes' ]]; then
    unblacken_cmd ./node_modules/.bin/eslint \
      --quiet --format junit --output-file "$CI_REPORTS"/LINT-Eslint.xml \
      --color $(js_files)
  else
    unblacken_cmd ./node_modules/.bin/eslint --quiet --color $(js_files) $1
  fi
}

haml() {
  bundle exec haml-lint app/views/**
}

ruby() {
  if [[ "$GENERATE_TEST_REPORTS" = 'yes' ]]; then
    bundle exec rubocop \
     -r $(bundle show rubocop-junit-formatter)/lib/rubocop/formatter/junit_formatter.rb \
     --format progress --format RuboCop::Formatter::JUnitFormatter --out "$CI_REPORTS"/LINT-Rubocop.xml
  else
    bundle exec rubocop $1
  fi
}

is_valid_lint() {
  local lint="$1"
  echo -e "$available_lints" | grep --quiet "$lint"
}

cd "$ROOT"
available_lints="js\nruby\nhaml\nscss"

selected_lint="$1"
if [[ -z "$selected_lint" ]]; then
  runmulti $(echo -e "$available_lints" | xargs)
else
  is_valid_lint "$selected_lint" || abort 'Unknown lint specified'
  "$selected_lint" ${@:2}
fi
